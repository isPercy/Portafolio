---
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import Herramientas from '../components/herramientas.astro';
const minombre = "Juan Pablo Godoy";
---
<html lang="es">
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/svg" href="/icon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Portfolio</title>
    <style>
        *{
            font-family: SourceSansPro-Bold.ttf, source-sans-pro.black.ttf;
        }
    </style>
</head>
<body class="bg-gray-900 text-white">

    <Header />

    <main class="px-24 py-16">
        <section class="mt-16 pb-20">
            <h2 class="text-4xl font-bold mb-8">Acerca de mí</h2>
            <p class="text-lg">
                Hola, Yo soy {minombre}. Desarrollador Web y Modelo de Patas. Soy de Quillota, Chile. Especializado en Procesos de Desarrollo de Soluciones Informáticas.
            </p>
        </section>
        <section>
            <h2 class="text-4xl font-bold mb-8">Proyectos</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="bg-gray-800 p-4 rounded shadow">
                    <h3 class="text-2xl font-bold">Desarrollo de sistema de gestión de solicitudes</h3>
                    <p>Descripción detallada del proyecto 1.</p>
                </div>
                <div class="bg-gray-800 p-4 rounded shadow">
                    <h3 class="text-2xl font-bold">Sistema de gestion de inventario</h3>
                    <p>Descripción detallada del proyecto 2.</p>
                </div>
                <div class="bg-gray-800 p-4 rounded shadow">
                    <h3 class="text-2xl font-bold">Machine Learning de eventos cardíacos</h3>
                    <p>Descripción detallada del proyecto 3.</p>
                </div>
            </div>
        </section>

        <Herramientas />

    </main>
    
    <Footer />
</body>
</html>
