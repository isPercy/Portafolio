---
import { ViewTransitions } from 'astro:transitions'; // Importamos el modulo de tansicion entre paginas
import Footer from '../components/footer.astro';

const { pageTitle } = Astro.props;
---
<html lang="es">
<head>
    <meta name="description" content="Este sitio es un portafolio donde se describen las capacidades y destrezas del desarrollador Juan Pablo Godoy, tambien agregando unos los proyectos desarrollados." />
    <meta charset="UTF-8">
    <link rel="icon" type="image/svg" href="/icon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>{ pageTitle }</title>
    <ViewTransitions />
</head>
<body class="min-h-screen bg-slate-900 text-white">

    <div class="absolute z-20 top-0 inset-x-0 flex justify-center overflow-hidden pointer-events-none">
        <div class="w-[108rem] fixed flex-none flex justify-end">
            <picture>
                <source srcset="../../public/docs@30.8b9a76a2.avif" type="image/avif">
                <img src="../../public/docs@30.8b9a76a2.avif" alt="" class="w-[71.75rem] flex-none max-w-none dark:hidden" decoding="async">
            </picture>
            <picture>
                <source srcset="../../public/docs-dark@30.1a9f8cbf.avif" type="image/avif">
                <img src="../../public/docs-dark@30.1a9f8cbf.avif" alt="" class="w-[90rem] flex-none max-w-none hidden dark:block" decoding="async">
            </picture>
        </div>
    </div>
    <main class="container max-w-3xl mx-auto">

        <slot />

    </main>

    <Footer />

</body>
</html>